@page
@model SinusSkateboards.Pages.AboutModel
@{
}

<div class="wrapper2">
    <header>
        <h1>
            Sinus Skateboards
            <img src="~/imgs/logos/sinus-logo-landscape -  small.png" />
        </h1>
    </header>
    <nav>
        <a href="/Index">Home</a>
        @if (Model.ItemsInCart > 0)
        {
            <a href="/Cart">
                <span class="material-icons-outlined">
                    shopping_cart
                </span>
            </a>
        }
        else
        {
            <a href="/Index">
                <span class="material-icons-outlined">
                    shopping_cart
                </span>
            </a>
        }
        <p>(@Model.ItemsInCart)</p>
        <form method="post">
            <input id="search" type="search" style="width:400px" asp-for="@Model.SearchString" placeholder="Search product, ex: t-shirt or northern lights or blue" />
            <input type="submit" asp-route-searchString="@Model.SearchString" value="Search"/>
        </form>
    </nav>
    <section>
        <main>
            <article>
                <img src="~/imgs/logos/sinus-logo-portrait - large.png" style="max-width:300px">
                <h2>We love skateboarding!</h2>
                <p>
                    We are a skateboard company that recenlty decided to open a web shop. We have also have a shop at this adress
                    "" that we have had for years now.
                </p>
                <br />
                <p>Check out our products, we got t-shirts, hoodies, caps, boards and wheels all in good quality and fair prices</p>
                <br />
                <p>Icons for this website is taken from Google Icons</p>
            </article>
        </main>
        <aside>
            <h4>Clothes</h4>
            <a href="/T-shirts">T-shirts</a>
            <a href="/Hoodies">Hoodies</a>
            <a href="/Caps">Caps</a>

            <h4>Skateboarding</h4>
            <a href="/Boards">Boards</a>
            <a href="/Wheels">Wheels</a>
        </aside>
    </section>
    <footer>
        <article>
            &copy; 2021 - Sinus Skateboards</p>
            <a href="/About">About</a>
        </article>
    </footer>
</div>