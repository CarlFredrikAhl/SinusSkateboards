@page
@model SinusSkateboards.Pages.CartModel
@{
}

<div class="wrapper2">
    <header>
        <h1>
            Sinus Skateboards
            <img src="~/imgs/logos/sinus-logo-landscape -  small.png" />
        </h1>
    </header>
    <nav>
        <a href="/Index">Home</a>
        <a href="/Privacy">
            <span class="material-icons-outlined">
                shopping_cart
            </span>
        </a>
        <p>(@Model.Cart.Products.Count)</p>
    </nav>
    <section>
        <main>
            @foreach (var product in Model.Cart.Products)
            {
                <article>
                    <img src="~/imgs/products/@product.Image" style="max-width:100px">
                    <h2>@product.Title</h2>
                    <p>@product.Description</p>
                    <p>@product.Color</p>
                    <p>$@product.Price</p>

                    <form method="post">
                        <button class="brn btn-danger">Delete from cart</button>
                    </form>
                </article>
            }

            <article>
                <h2>Total price: $@Model.Cart.TotalPrice</h2>
                <button class="brn btn-success">Continue to checkout</button>
            </article>
        </main>
        <aside>
            <h4>Clothes</h4>
            <a href="/T-shirts">T-shirts</a>
            <a href="/Hoodies">Hoodies</a>
            <a href="/Caps">Caps</a>

            <h4>Skateboarding</h4>
            <a href="/Boards">Boards</a>
            <a href="/Wheels">Wheels</a>
        </aside>
    </section>
