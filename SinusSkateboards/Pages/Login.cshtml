@page
@model SinusSkateboards.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="wrapper2">
    <header>
        <h1>
            Sinus Skateboards
            <img src="~/imgs/logos/sinus-logo-landscape -  small.png" />
        </h1>
    </header>
    <section>
        <main>
            <article>
                <h1>Login</h1>

                <form method="post">
                    <span class="text-danger" asp-validation-for="@Model.Username"></span>
                    <br />
                    <span class="text-danger" asp-validation-for="@Model.Password"></span>
                    <br />
                    <label for="username">Username:</label>
                    <input id="username" type="text" asp-for="@Model.Username" />
                    <label for="password">Password:</label>
                    <input id="password" type="password" asp-for="@Model.Password" />
                    <button class="brn btn-success">Sign in</button>
                </form>
            </article>
        </main>
        <aside>
            <h4>Clothes</h4>
            <a href="/T-shirts">T-shirts</a>
            <a href="/Hoodies">Hoodies</a>
            <a href="/Caps">Caps</a>

            <h4>Skateboarding</h4>
            <a href="/Boards">Boards</a>
            <a href="/Wheels">Wheels</a>
        </aside>
    </section>
 
    <footer>
        <article>
            &copy; 2021 - Sinus Skateboards</p>
            <a href="/About">About</a>
        </article>
    </footer>
</div>
