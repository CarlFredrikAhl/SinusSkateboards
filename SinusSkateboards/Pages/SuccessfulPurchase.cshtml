@page
@model SinusSkateboards.Pages.SuccessfulPurchaseModel
@{
}

<div class="wrapper2">
    <header>
        <h1>
            Sinus Skateboards
            <img src="~/imgs/logos/sinus-logo-landscape -  small.png" />
        </h1>
    </header>
    <nav>
        <a href="/Index">Home</a>
        <a href="/Privacy">
            <span class="material-icons-outlined">
                shopping_cart
            </span>
        </a>
    </nav>
    <section>
        <main>
            <article>
                <h1>Purchase successful!</h1>
                <p>First name: @Model.Checkout.FirstName</p>
                <p>Last name: @Model.Checkout.LastName</p>
                <p>Email address: @Model.Checkout.EmailAddress</p>
                <p>Phone number: @Model.Checkout.PhoneNumber</p>
                <p>¨Delivery address: @Model.Checkout.DeliveryAddress</p>
                <p>"Order number: @Model.Order.OrderNumber"</p>
                <p>Total price: $@Model.Cart.TotalPrice</p>

                @foreach (var product in Model.Order.Products)
                {
                    <p>@product.Title</p>
                }

                <form method="post">
                    <button class="brn btn-succes" asp-page="/Index">Home</button>
                </form>
            </article>
        </main>
        <aside>
            <h4>Clothes</h4>
            <a href="/T-shirts">T-shirts</a>
            <a href="/Hoodies">Hoodies</a>
            <a href="/Caps">Caps</a>

            <h4>Skateboarding</h4>
            <a href="/Boards">Boards</a>
            <a href="/Wheels">Wheels</a>
        </aside>
    </section>
    <footer>
        <article>
            &copy; 2021 - Sinus Skateboards</p>
            <a href="/About">About</a>
        </article>
    </footer>
</div>